<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="disableprice" translate="label" type="text" sortOrder="99" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Majidian Disable Price</label>
                <field id="attributes" translate="label" type="multiselect" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Disable price for following attribute sets</label>
                    <source_model>Magento\Catalog\Model\Product\AttributeSet\Options</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
            </group>
        </section>
    </system>
</config>
